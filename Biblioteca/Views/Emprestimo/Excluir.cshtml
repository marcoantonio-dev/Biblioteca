@model EmprestimoModel
@{
    ViewData["title"] = "Excluir Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Empréstimo</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <h2 class="text-light">Tem certeza que deseja excluir?</h2>

        <div class="form-group">
            <label for="Recebedor" class="text-light">Endereço de Email</label>
            <input type="text" class="form-control" asp-for="Recebedor" disabled id="Recebedor" disable id="Recebedor">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="form-group">
            <label for="Fornecedor" class="text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" disabled id="Fornecedor" placeholder="Quem empresta o livro?">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>

        </div>

        <div class="form-group">
            <label for="Livro" class="text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" disabled id="Livro" placeholder="Qual livro?">
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>

        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Enviar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

